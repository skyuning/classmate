<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/tab_news"
            android:gravity="center"
            android:padding="5dp"
            android:tag="com.example.classmate.NewsesFragment"
            android:text="新鲜事"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
        
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_holiday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/tab_holiday"
            android:gravity="center"
            android:padding="5dp"
            android:tag="com.example.classmate.HolidaysFragment"
            android:text="纪念日"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/tab_users"
            android:gravity="center"
            android:padding="5dp"
            android:tag="com.example.classmate.UsersFragment"
            android:text="同学录"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/tab_setting"
            android:gravity="center"
            android:padding="5dp"
            android:tag="com.example.classmate.SettingFragment"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>